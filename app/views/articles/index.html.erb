<div class="container p-2">
  <div class="row">
    <div class="col-2 border-right border-secondary">
      Column
    </div>
    <div class="col">
      <div class="border-bottom border-secondary">
        <h3>ホーム</h3>
        <%= form_with model: @article do |f| %>
          <div class="form-group">
            <label for="article_title">Title</label><br>
            <%= f.text_field :title ,class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="article_content">Content</label><br>
            <%= f.text_area :content ,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "つぶやく" ,class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div>
        <table>
          <% @articles.each do |article| %>
            <tr>
              <td>a</td>
              <td>b</td>
              <td><%= article.content %></td>
              <td>
                <% if user_signed_in? %>
                  <%= link_to "削除", article_path(article), method: :delete %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
    <div class="col border-left border-secondary">
      Column
    </div>
  </div>
</div>